#ADD TOGETHER FOR BLAST DATABASE                  
cat sequences/transcriptomes/*_aa.fa > sequences/transcriptomes/allxtomes_aa.fasta
cat sequences/transcriptomes/*_nt.fa > sequences/transcriptomes/allxtomes_nt.fasta
